#include<stdio.h>
int main()
{
    int a[4][4], i,j;
    printf("Enter data in matrix\n");
    for(i=0; i<=3; i++)
    {
        for(j=0; j<=3; j++)
        {
            scanf("%d", &a[i][j]);
        }
    }

    printf("Showing original matrix in");
    for(i=0; i<=3; i++)
    {
        for(j=0; j<=3; j++)
        {
            scanf("%d", &a[i][j]);
        }
        printf("\n");
    }

    printf("Showing transpose of matrix");
    for(i=0; i<=3; i++)
    {
        for(j=0; i<=3; j++)
        {
            scanf("%d", &a[i][j]);
        }
        printf("\n");
    }

    return 0;
}